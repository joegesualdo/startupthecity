
<% @events.each do |i| %>
<%if DateTime.now.beginning_of_day < i.date && i.cost <= 20 %>
<% if i.cost == 0 %>
	<%cost = "FREE" %>
<%else%>
	<% cost = "$#{i.cost}" %>
<%end%>
<div class="events container" onclick="window.location = '/events/<%= i.id%>'">
	<div class="event">
		<div class="event-inner">
					<strong class="PriceContainer"><strong class="pricee"><%=cost%></strong></strong>
			<div class="calendar">
				<div class="month">
					<p class="center"><%= i.date.strftime("%b")%></p>
				</div>
				<div class="day center">
					<h1><%= i.date.strftime("%d")%></h1>
					<h4><%= i.date.strftime("%A")%></h4>
				</div>
			</div>
			<div class="title-description">
				<div class="title">
					<h1><%= link_to i.title, i %></h1>
				</div>
				<div class="short-description">
					<p><%= i.shortdescription %></p>
				</div>
			</div>
			<div class="time-price">
				<div class="time">
					<h3 class="center"><%= i.date.strftime("%I:%M %p").downcase %></h3>
				</div>
				<div class="price">
					<h3 class="center"></h3>
				</div>
			</div>
			<div class="icons">
				<%if i.course == true %>
					<div class="icon_image">
						<img src="/assets/pencil.png">
					</div>
				<%else%>
				<%if i.speaker == true %>
					<div class="icon_image">
						<img src="/assets/microphone.png">
					</div>
				<%else%>
				<%if i.party == true %>
					<div class="icon_image">
						<img src="/assets/cocktail.png">
					</div>
				<%else%>
				<%if i.hackathon == true %>
					<div class="icon_image">
						<img src="/assets/laptop.png">
					</div>
				<%if i.food == true %>
					<div class="icon_image">
						<img src="/assets/restaurant.png">
					</div>
				<%else%>
				<%end%>
				<%end%>
				<%end%>
				<%end%>
				<%end%>
			</div>
		</div>
	</div>
</div>
</div>
</a>
<%end%>
<%end%>
</div>